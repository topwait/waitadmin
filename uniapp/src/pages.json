{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "首页"
            }
        },
        {
            "path": "pages/login/enroll",
            "style": {
                "navigationBarTitleText": "登录",
                "navigationBarTextStyle": "white",
                "navigationBarBackgroundColor": "#2979ff"
            }
        },
        {
            "path": "pages/login/regist",
            "style": {
                "navigationBarTitleText": "注册",
                "navigationBarTextStyle": "white",
                "navigationBarBackgroundColor": "#2979ff"
            }
        },
        {
            "path": "pages/login/forget",
            "style": {
                "navigationBarTitleText": "忘记密码",
                "navigationBarTextStyle": "white",
                "navigationBarBackgroundColor": "#2979ff"
            }
        },
        {
            "path": "pages/users/home",
            "style": {
                "navigationBarTitleText": "个人中心",
                "navigationBarTextStyle": "white",
                "navigationBarBackgroundColor": "#2979ff"
            }
        },
        {
            "auth": true,
            "path": "pages/users/intro",
            "style": {
                "navigationBarTitleText": "个人简介",
                "navigationBarTextStyle": "white",
                "navigationBarBackgroundColor": "#2979ff"
            }
        }
        ,{
            "path" : "pages/article/lists",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "资讯",
                "navigationBarTextStyle": "black",
                "navigationBarBackgroundColor": "#ffffff",
                "disableScroll": true
            }
        }
        ,{
            "path" : "pages/article/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "资讯详情",
                "navigationBarTextStyle": "black",
                "navigationBarBackgroundColor": "#ffffff",
                "disableScroll": true
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#f8f8f8"
    },
    "tabBar": {
        "color": "#666666",
        "selectedColor": "#2979ff",
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/tabBar/tab_home.png",
                "selectedIconPath": "static/tabBar/tab_home_no.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/article/lists",
                "iconPath": "static/tabBar/tab_community.png",
                "selectedIconPath": "static/tabBar/tab_community_no.png",
                "text": "资讯"
            },
            {
                "pagePath": "pages/users/home",
                "iconPath": "static/tabBar/tab_user.png",
                "selectedIconPath": "static/tabBar/tab_user_no.png",
                "text": "我的"
            }
        ]
    },
    "easycom": {
        "custom": {
            "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue",
            "^w-(.*)": "@/components/widgets/$1/$1.vue"
        }
    }
}